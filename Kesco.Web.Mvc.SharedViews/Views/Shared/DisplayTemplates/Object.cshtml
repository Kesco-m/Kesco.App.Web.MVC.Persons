@inherits Kesco.Web.Mvc.SharedViews.SharedViewPage
@using Kesco.ObjectModel
@using Kesco.Web.Mvc
@using Kesco.Web.Mvc.UI

@if (Model == null) { 
    @(ViewData.ModelMetadata.NullDisplayText)
} /*else if (ViewData.TemplateInfo.TemplateDepth > 1) {
