		<li><a href="#tabs-2">Параметры поиска</a></li>
	  </ul>
	  <div id="tabs-1">
	@{ Html.EnableClientValidation(); }
	@using (Html.BeginForm("SearchEntity", null, FormMethod.Post, new { id = "Entity__EditForm" })) {

		@Html.EditorFor(m => m.Model.Entity)

	}    
