@inherits Kesco.Web.Mvc.SharedViews.SharedViewPage<Kesco.Web.Mvc.SharedViews.Models.SearchEntity.ViewModel>
@using Kesco
@using Kesco.Web.Mvc
@{
    ViewBag.Title = "Поисковик";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Header {

<div>
	<span style="ui-widget-header">Поисковик:</span>
	<select data-bind="
			jqOptions: Entities,
			optionsValue: 'EntityID',
			optionsText: 'EntityName',
			value: Model.EntityID,
			optionsCaption: 'Выберите сущность...'
		"></select>
</div>
}
<div style="overflow: auto;">
	<div id="tabs" class="tabs-bottom">
