	  </div>
	</div>
</div>
<div style="float: left; width: 50%;">

@{
	Html.RegisterScript(@"
		$('#tabs').tabs({ heightStyle: 'fill' });
		$(window).resize(function() {
			var $parent = $('#dialogContentPane');
			$('#tabs').height($parent.height()-10);
		});
	");
}
</div>