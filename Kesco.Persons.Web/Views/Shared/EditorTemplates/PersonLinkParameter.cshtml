@inherits Kesco.Persons.Web.SiteViewPage<int>
@using Resources
@using Kesco.Persons.Web
@using Kesco.Web.Mvc

@{ 
	string id = ViewData.TemplateInfo.GetFullHtmlFieldId("");
	string name = ViewData.TemplateInfo.HtmlFieldPrefix;
}
<style type="text/css">
	.linkParams td { padding: 0px; }
</style>

<table class="linkParams" cellpadding="0" cellspacing="0" border="0">
<tr>
	<td><input type="radio" id="@(id)__0" name="@name" data-bind="checkedValue:0, checked: @name"/></td>
	<td>@Resources.Persons_Link_Parameter0</td>
</tr>
<tr>
	<td><input type="radio" id="@(id)__1" name="@name" data-bind="checkedValue:1, checked: @name"/></td>
	<td>@Resources.Persons_Link_Parameter1</td>
</tr>
<tr>
	<td><input type="radio" id="@(id)__2" name="@name" data-bind="checkedValue:2, checked: @name"/></td>
	<td>@Resources.Persons_Link_Parameter2</td>
</tr>
</table>

